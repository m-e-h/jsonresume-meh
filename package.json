{
  "name": "jsonresume-meh",
  "version": "1.0.0",
  "description": "HTML Resume Builder - Generate professional resumes from JSON Resume schema",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:classic": "VITE_RESUME_TEMPLATE=classic vite",
    "dev:modern": "VITE_RESUME_TEMPLATE=modern vite",
    "dev:minimal": "VITE_RESUME_TEMPLATE=minimal vite",
    "build": "vite build",
    "build:classic": "VITE_RESUME_TEMPLATE=classic vite build",
    "build:modern": "VITE_RESUME_TEMPLATE=modern vite build",
    "build:minimal": "VITE_RESUME_TEMPLATE=minimal vite build",
    "build:all": "VITE_BUILD_ALL_TEMPLATES=true vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate:json": "node scripts/validate-resume.js",
    "validate:templates": "node scripts/validate-templates.js",
    "start": "npm run dev",
    "postinstall": "echo 'Dependencies installed successfully. Run npm run dev to start development server.'"
  },
  "keywords": [
    "resume",
    "json-resume",
    "html-templates",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.19",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "sass": "^1.77.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "ajv": "^8.16.0",
    "ajv-formats": "^2.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "json"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "moduleNameMapper": {
      "^@config$": "<rootDir>/template.config.js"
    }
  }
}